<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple WPF App" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <ListView Name="NumberListView" Height="100" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="AddButton" Content="Add" Width="100" Margin="5" Click="AddButton_Click"/>
                <Button Name="DelButton" Content="Del" Width="100" Margin="5" Click="DelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
